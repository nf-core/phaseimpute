params {
    max_memory = '7.GB'
    rename_chr = true
}

process {
    withName: BCFTOOLS_ANNOTATE {
        ext.args = [
            "-Oz",
            "--no-version"
        ].join(' ')
        ext.prefix = { "${meta.id}_chrrename" }
    }
    withName: 'PREPROCESS:SAMTOOLS_REHEADER' {
        ext.prefix = { "${meta.id}_nochr" }
    }
}
