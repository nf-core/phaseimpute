params {
    max_memory = '7.GB'
    rename_chr = false
}

process {
    withName: GAWK {
        ext.args2  = "'BEGIN {FS=\"\\t\"} NR==1 { if (\$1 ~ /^chr/) { print \"chr\" } else { print \"nochr\" } }'"
        ext.prefix = { "${meta.id}_chrrename" }
        ext.suffix = 'txt'
    }
    withName: 'PREPROCESS:SAMTOOLS_REHEADER' {
        ext.prefix = { "${meta.id}_nochr" }
    }
}
