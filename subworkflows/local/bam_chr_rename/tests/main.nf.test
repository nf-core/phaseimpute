nextflow_workflow {

    name "Test Subworkflow BAM_CHR_RENAME"
    script "../main.nf"

    config "./nextflow.config"

    workflow "BAM_CHR_RENAME"

    tag "subworkflows"
    tag "subworkflows_local"
    tag "subworkflows/bam_chr_rename"
    tag "bam_chr_rename"

    tag "samtools"
    tag "samtools/reheader"
    tag "samtools/index"
    tag "gawk"

    test("Should run without error") {
        when {
            workflow {
                """
                input[0] = Channel.fromList([
                    [
                        [id: "Paired"],
                        file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExist:true),
                        file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam_bai'], checkIfExist:true)
                    ],
                    [
                        [id: "MT"],
                        file(params.test_data['homo_sapiens']['illumina']['test_illumina_mt_bam'], checkIfExist:true),
                        file(params.test_data['homo_sapiens']['illumina']['test_illumina_mt_bam_bai'], checkIfExist:true)
                    ]
                ])
                input[1] = Channel.of([
                    [id:"GRCh37_chr22"],
                    file(params.test_data['homo_sapiens']['genome']['genome_fasta'], checkIfExist:true),
                    file(params.test_data['homo_sapiens']['genome']['genome_fasta_fai'], checkIfExist:true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
