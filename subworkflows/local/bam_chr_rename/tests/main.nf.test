nextflow_workflow {

    name "Test Subworkflow BAM_CHR_RENAME"
    script "../main.nf"

    config "./nextflow.config"

    workflow "BAM_CHR_RENAME"

    tag "subworkflows"
    tag "subworkflows_local"
    tag "subworkflows/bam_chr_rename"
    tag "bam_chr_rename"

    tag "samtools"
    tag "samtools/reheader"
    tag "samtools/index"
    tag "gawk"

    test("Should run without error") {
        when {
            workflow {
                """
                input[0] = Channel.fromList([
                    [
                        [id: "multi"],
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/illumina/bam/NA24385_sv.bam.gz",checkIfExist:true),
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/illumina/bam/NA24385_sv.bam.gz.tbi",checkIfExist:true)
                    ],
                    [
                        [id: "chr21"],
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/illumina/bam/chr21/simulated_sv.bam.gz",checkIfExist:true),
                        file("https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/illumina/bam/chr21/simulated_sv.bam.gz.tbi",checkIfExist:true)
                    ]
                ])
                input[1] = Channel.of([
                    [id:"GRCh37"],
                    file("https://raw.githubusercontent.com/nf-core/test-datasets/phaseimpute/data/reference_genome/21_22/hs38DH.chr21_22.fa",checkIfExist:true),
                    file("https://raw.githubusercontent.com/nf-core/test-datasets/phaseimpute/data/reference_genome/21_22/hs38DH.chr21_22.fa.fai",checkIfExist:true)
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() }
            )
        }
    }
}
